{
  "name": "starter-bolt-prisma-ts",
  "version": "1.0.0",
  "description": "Starter template for building Slack apps using Bolt",
  "main": "src/app.ts",
  "repository": "https://github.com/utsavdotpro/starter-bolt-prisma-ts",
  "author": "Utsav Barnwal",
  "license": "MIT",
  "scripts": {
    "start": "node src/app.ts",
    "dev": "nodemon src/app.ts",
    "start:express": "nodemon src/express.ts",
    "migrate:dev": "prisma migrate dev",
    "migrate:reset": "prisma migrate reset",
    "migrate:deploy": "npx prisma migrate deploy",
    "prisma:studio": "npx prisma studio",
    "prisma:generate": "npx prisma generate",
    "prisma:generate:watch": "npx prisma generate --watch",
    "postinstall": "npm run prisma:generate",
    "format": "prettier --write .",
    "pre-commit": "yarn lint-staged"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "dotenv": "^16.0.3",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@slack/bolt": "^3.12.2"
  }
}
